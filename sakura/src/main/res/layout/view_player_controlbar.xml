<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_controllbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:gravity="center_vertical"
    android:minHeight="48dp">

    <ImageView
        android:id="@+id/player_controllbar_play_btn"
        android:layout_width="@dimen/common_icon_size_big"
        android:layout_height="@dimen/common_icon_size_big"
        android:layout_marginEnd="@dimen/common_margin_space_horizontal"
        android:layout_marginLeft="@dimen/common_margin_parent_horizontal"
        android:layout_marginRight="@dimen/common_margin_space_horizontal"
        android:layout_marginStart="@dimen/common_margin_parent_horizontal"
        android:padding="@dimen/common_icon_padding"
        android:src="@mipmap/ic_player_play_white_24dp" />

    <LinearLayout
        android:id="@+id/player_controllbar_process_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/player_controllbar_seekbar"
            style="@style/SeekBarAppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/player_controllbar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_parent_horizontal"
            android:layout_marginRight="@dimen/common_margin_parent_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_controllbar_currenttime_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_space_horizontal"
                android:layout_marginStart="@dimen/common_margin_space_horizontal"
                android:text="06:21"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/player_controllbar_endtime_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/ijk_iv_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@mipmap/ic_player_iv_rotation"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/player_controllbar_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@mipmap/ic_player_icon_fullscreen_stretch"
        android:visibility="gone" />

</LinearLayout>
